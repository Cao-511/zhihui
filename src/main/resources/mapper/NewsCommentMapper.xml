<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.NewsCommentMapper">
    <!-- 分页查询 -->
    <select id="queryPage"  resultType="com.project.platform.entity.NewsComment">
        SELECT news_comment.*
        FROM news_comment
        <include refid="queryConditions"/>
        ORDER BY news_comment.id DESC
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数 -->
    <select id="queryCount"  resultType="int">
        SELECT count(news_comment.id) FROM news_comment
        <include refid="queryConditions"/>
    </select>

    <!-- 查询条件 -->
    <sql id="queryConditions">
        <where>
          <if test="query.content != null and query.content.trim() != ''">
            AND news_comment.content LIKE CONCAT('%', #{query.content}, '%')
          </if>
        </where>
    </sql>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.project.platform.entity.NewsComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO news_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="newsId != null">news_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="content != null">content,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="newsId != null">#{newsId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="content != null">#{content},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>


    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.project.platform.entity.NewsComment">
        UPDATE news_comment
        <set>
            <if test="newsId != null">
             news_id = #{newsId},
            </if>
            <if test="userId != null">
             user_id = #{userId},
            </if>
            <if test="content != null">
             content = #{content},
            </if>
            <if test="parentId != null">
             parent_id = #{parentId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据ID列表删除 -->
    <delete id="removeByIds">
        DELETE FROM news_comment
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>    
</mapper>
