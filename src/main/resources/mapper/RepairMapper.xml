<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.RepairMapper">
    <!-- 分页查询 -->
    <select id="queryPage"  resultType="com.project.platform.entity.Repair">
        SELECT repair.*
        FROM repair
        <include refid="queryConditions"/>
        ORDER BY repair.id DESC
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数 -->
    <select id="queryCount"  resultType="int">
        SELECT count(repair.id) FROM repair
        <include refid="queryConditions"/>
    </select>

    <!-- 查询条件 -->
    <sql id="queryConditions">
        <where>
          <if test="query.type != null and query.type.trim() != ''">
            AND repair.type LIKE CONCAT('%', #{query.type}, '%')
          </if>
            <if test="query.status != null and query.status.trim() != ''">
                AND repair.status = #{query.status}
            </if>
            <if test="query.userId != null">
                AND repair.user_id = #{query.userId}
            </if>
            <if test="query.urgencyLevel != null and query.urgencyLevel.trim() != ''">
                AND repair.urgency_level = #{query.urgencyLevel}
            </if>
          <if test="query.content != null and query.content.trim() != ''">
            AND repair.content LIKE CONCAT('%', #{query.content}, '%')
          </if>
        </where>
    </sql>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.project.platform.entity.Repair" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO repair
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="houseId != null">house_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="content != null">content,</if>
            <if test="urgencyLevel != null">urgency_level,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="appointmentTime != null">appointment_time,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="houseId != null">#{houseId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="content != null">#{content},</if>
            <if test="urgencyLevel != null">#{urgencyLevel},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="appointmentTime != null">#{appointmentTime},</if>
        </trim>


    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.project.platform.entity.Repair">
        UPDATE repair
        <set>
            <if test="houseId != null">
             house_id = #{houseId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="content != null">
             content = #{content},
            </if>
            <if test="urgencyLevel != null">
             urgency_level = #{urgencyLevel},
            </if>
            <if test="status != null">
             status = #{status},
            </if>
            <if test="createTime != null">
             create_time = #{createTime},
            </if>
            <if test="appointmentTime != null">
                appointment_time = #{appointmentTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据ID列表删除 -->
    <delete id="removeByIds">
        DELETE FROM repair
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <delete id="removeByHouseIds">
        DELETE FROM repair
        WHERE house_id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
