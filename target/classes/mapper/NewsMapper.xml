<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.NewsMapper">
    <!-- 分页查询 -->
    <select id="queryPage"  resultType="com.project.platform.entity.News">
        SELECT news.*
        FROM news
        <include refid="queryConditions"/>
        ORDER BY news.id DESC
        LIMIT #{offset}, #{pageSize}
    </select>
    <!-- 查询总数 -->
    <select id="queryCount"  resultType="int">
        SELECT count(news.id) FROM news
        <include refid="queryConditions"/>
    </select>

    <!-- 查询条件 -->
    <sql id="queryConditions">
        <where>
          <if test="query.title != null and query.title.trim() != ''">
            AND news.title LIKE CONCAT('%', #{query.title}, '%')
          </if>
          <if test="query.content != null and query.content.trim() != ''">
            AND news.status LIKE CONCAT('%', #{query.content}, '%')
          </if>
        </where>
    </sql>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.project.platform.entity.News" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO news
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="image != null">image,</if>
            <if test="content != null">content,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="image != null">#{image},</if>
            <if test="content != null">#{content},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>


    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.project.platform.entity.News">
        UPDATE news
        <set>
            <if test="title != null">
             title = #{title},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="content != null">
             content = #{content},
            </if>
            <if test="createTime != null">
             create_time = #{createTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <!-- 根据ID列表删除 -->
    <delete id="removeByIds">
        DELETE FROM news
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
